<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>

<configuration scan="true" scanPeriod="30 seconds"> <!-- Added scanPeriod -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <!-- Consider defining log path via Spring Boot properties (logging.file.path) -->
    <!-- Or ensure LOG_ROOT is reliably set -->
    <property name="LOG_ROOT"            value="${CATALINA_BASE:-.}"/>
    <property name="LOG_PATH"            value="${LOG_ROOT}/logs"/>
    <property name="APP_NAME"            value="${spring.application.name:-anm-gateway-service}"/> <!-- Use Spring App Name -->
    <property name="LOG_ARCHIVE_PREFIX"  value="${LOG_PATH}/${APP_NAME}/%d{yyyy-MM-dd}.%i"/> <!-- Include app name -->
    <property name="LOG_ARCHIVE_DAYS"    value="10"/>
    <property name="MAX_FILE_SIZE"       value="100MB"/>
    <property name="MAX_TOTAL_FILE_SIZE" value="10GB"/>
    <springProperty scope="context"
                    name="LOGSTASH_HOST"
                    source="config.logstash.host"/>

    <springProperty scope="context"
                    name="LOGSTASH_PORT"
                    source="config.logstash.port"/>

    <!-- Define patterns (Keep your existing patterns if they work for you) -->
    <!-- Ensure MDC values (IP, S, TX, U) are set by your application (e.g., interceptor) -->
    <property name="FILE_LOG_PATTERN"    value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%15.15t] %-5level [%thread, %X{requestId}] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
    <property name="CONSOLE_LOG_PATTERN" value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) [%thread, %X{requestId}] %clr([${APP_NAME},%X{traceId:-},%X{spanId:-}]){yellow} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <!-- Rolling File Appender for ALL logs >= DEBUG -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/${APP_NAME}-debug.log</File>
        <!-- Filter: Only logs from DEBUG level and above -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <charset>utf-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_ARCHIVE_PREFIX}-debug.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern> <!-- Added .gz for compression -->
            <maxHistory>${LOG_ARCHIVE_DAYS}</maxHistory>
            <totalSizeCap>${MAX_TOTAL_FILE_SIZE}</totalSizeCap>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
        </rollingPolicy>
    </appender>

    <!-- Rolling File Appender for logs >= INFO -->
    <appender name="INFO_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/${APP_NAME}-info.log</File>
        <!-- Filter: Only logs from INFO level and above -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <charset>utf-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_ARCHIVE_PREFIX}-info.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>${LOG_ARCHIVE_DAYS}</maxHistory>
            <totalSizeCap>${MAX_TOTAL_FILE_SIZE}</totalSizeCap>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
        </rollingPolicy>
    </appender>

    <!-- Rolling File Appender for logs >= WARN -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/${APP_NAME}-error.log</File>
        <!-- Filter: Only logs from WARN level and above -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level> <!-- Log WARN and ERROR here -->
        </filter>
        <encoder>
            <charset>utf-8</charset>
            <pattern>${FILE_LOG_PATTERN}</pattern> <!-- Exception included in pattern -->
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_ARCHIVE_PREFIX}-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxHistory>${LOG_ARCHIVE_DAYS}</maxHistory>
            <totalSizeCap>${MAX_TOTAL_FILE_SIZE}</totalSizeCap>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
        </rollingPolicy>
    </appender>

    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${LOGSTASH_HOST}:${LOGSTASH_PORT}</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <appender name="ASYNC_LOGSTASH" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="LOGSTASH" />
        <queueSize>512</queueSize> <!-- Số lượng log tối đa trong hàng đợi -->
        <discardingThreshold>0</discardingThreshold> <!-- Ngưỡng loại bỏ log khi hàng đợi đầy -->
        <neverBlock>true</neverBlock> <!-- Không chặn luồng chính nếu hàng đợi đầy -->
    </appender>

    <!-- ASYNC Appender - Optional: Wrap the most frequently used appender if needed -->
    <!-- Example wrapping INFO_FILE -->
    <!--
    <appender name="ASYNC_INFO" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="INFO_FILE" />
    </appender>
    -->

    <!-- Root Logger Configuration -->
    <root>
        <!-- Set the base level for the entire application -->
        <level value="INFO"/>
        <appender-ref ref="CONSOLE" />
        <!-- Attach appenders directly. Filters inside appenders control content -->
        <appender-ref ref="DEBUG_FILE" /> <!-- Will get INFO+ due to root level, but filter inside allows DEBUG+ -->
        <appender-ref ref="INFO_FILE" />  <!-- Will get INFO+ -->
        <appender-ref ref="ERROR_FILE" /> <!-- Will get INFO+, but filter inside allows WARN+ -->
        <appender-ref ref="ASYNC_LOGSTASH" />
        <!-- If using ASYNC: <appender-ref ref="ASYNC_INFO" /> instead of INFO_FILE -->
    </root>

    <!-- Specific Logger Levels (Keep your existing specific loggers) -->
    <logger name="org.apache.catalina.startup.DigesterFactory" level="ERROR"/>
    <logger name="org.apache.catalina.util.LifecycleBase" level="ERROR"/>
    <logger name="org.apache.coyote.http11.Http11NioProtocol" level="WARN"/>
    <logger name="org.apache.sshd.common.util.SecurityUtils" level="WARN"/>
    <logger name="org.apache.tomcat.util.net.NioSelectorPool" level="WARN"/>
    <logger name="org.crsh.plugin" level="WARN"/>
    <logger name="org.crsh.ssh" level="WARN"/>
    <logger name="org.eclipse.jetty.util.component.AbstractLifeCycle" level="ERROR"/>
    <logger name="org.hibernate.validator.internal.util.Version" level="WARN"/>
    <logger name="org.springframework.boot.actuate.autoconfigure.CrshAutoConfiguration" level="WARN"/>
    <logger name="org.hibernate.SQL_SLOW" level="info"/>
    <logger name="org.hibernate.stat" level="debug"/>
    <logger name="javax.activation" level="WARN"/>
    <logger name="javax.mail" level="WARN"/>
    <logger name="javax.management.remote" level="WARN"/>
    <logger name="javax.xml.bind" level="WARN"/>
    <logger name="ch.qos.logback" level="WARN"/>
    <logger name="com.netflix" level="WARN"/>
    <logger name="com.netflix.discovery" level="INFO"/>
    <logger name="com.ryantenney" level="WARN"/>
    <logger name="com.sun" level="WARN"/>
    <logger name="com.zaxxer" level="WARN"/>
    <logger name="io.undertow" level="WARN"/>
    <logger name="io.undertow.websockets.jsr" level="ERROR"/>
    <logger name="org.ehcache" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
    <logger name="org.apache.catalina.startup.DigesterFactory" level="OFF"/>
    <logger name="org.bson" level="WARN"/>
    <logger name="org.hibernate.validator" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.hibernate.ejb.HibernatePersistence" level="OFF"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.security" level="WARN"/>
    <logger name="org.springframework.cache" level="WARN"/>
    <logger name="org.thymeleaf" level="WARN"/>
    <logger name="org.xnio" level="WARN"/>
    <logger name="springfox" level="WARN"/>
    <logger name="sun.rmi" level="WARN"/>
    <logger name="liquibase" level="WARN"/>
    <logger name="LiquibaseSchemaResolver" level="INFO"/>
    <logger name="sun.rmi.transport" level="WARN"/>
    <logger name="com.zaxxer.hikari.pool.HikariPool" level="WARN"/>
    <!-- Add your application's base package with DEBUG level if needed -->
    <!-- <logger name="com.vmc" level="DEBUG" additivity="false"> -->
    <!--    <appender-ref ref="DEBUG_FILE"/> -->
    <!--    <appender-ref ref="CONSOLE"/> -->
    <!-- </logger> -->


    <!-- https://logback.qos.ch/manual/configuration.html#shutdownHook and https://jira.qos.ch/browse/LOGBACK-1090 -->
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

</configuration>